<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ddd.infrastructure.dao.mapper.AuthIdentityMapper">

    <resultMap id="BaseResultMap" type="com.example.ddd.infrastructure.dao.po.AuthIdentityPO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="provider" property="provider" jdbcType="VARCHAR"/>
        <result column="provider_uid" property="providerUid" jdbcType="VARCHAR"/>
        <result column="extra_info" property="extraInfo" jdbcType="OTHER" typeHandler="org.apache.ibatis.type.ClobTypeHandler"/>
        <result column="created_at" property="createdAt" jdbcType="BIGINT"/>
        <result column="updated_at" property="updatedAt" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, provider, provider_uid, extra_info, created_at, updated_at
    </sql>

    <insert id="insert" parameterType="com.example.ddd.infrastructure.dao.po.AuthIdentityPO">
        INSERT INTO auth_identity (
            id, user_id, provider, provider_uid, extra_info, created_at, updated_at
        )
        VALUES (
            #{id}, #{userId}, #{provider}, #{providerUid}, #{extraInfo}::jsonb, #{createdAt}, #{updatedAt}
        )
    </insert>

    <select id="queryById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_identity
        WHERE id = #{id}
    </select>

    <select id="queryByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_identity
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

    <select id="queryByProviderAndProviderUid" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_identity
        WHERE provider = #{provider} AND provider_uid = #{providerUid}
        LIMIT 1
    </select>

    <select id="queryByUserIdAndProvider" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_identity
        WHERE user_id = #{userId} AND provider = #{provider}
        LIMIT 1
    </select>

    <update id="update" parameterType="com.example.ddd.infrastructure.dao.po.AuthIdentityPO">
        UPDATE auth_identity
        <set>
            <if test="providerUid != null">provider_uid = #{providerUid},</if>
            <if test="extraInfo != null">extra_info = #{extraInfo}::jsonb,</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM auth_identity WHERE id = #{id}
    </delete>

    <delete id="deleteByUserId">
        DELETE FROM auth_identity WHERE user_id = #{userId}
    </delete>

</mapper>

