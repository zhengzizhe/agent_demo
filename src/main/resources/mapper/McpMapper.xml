<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ddd.infrastructure.dao.mapper.McpMapper">

    <resultMap id="BaseResultMap" type="com.example.ddd.infrastructure.dao.po.McpPO">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="base_url" property="baseUrl" jdbcType="VARCHAR"/>
        <result column="headers" property="headers" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="BIGINT"/>
        <result column="updated_at" property="updatedAt" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, type, description, base_url, headers, status, created_at, updated_at
    </sql>

    <insert id="insert" parameterType="com.example.ddd.infrastructure.dao.po.McpPO">
        INSERT INTO mcp (id, name, type, description, base_url, headers, status, created_at, updated_at)
        VALUES (#{id}, #{name}, #{type}, #{description}, #{baseUrl}, #{headers}, #{status}, #{createdAt}, #{updatedAt})
    </insert>

    <select id="queryById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM mcp
        WHERE id = #{id}
    </select>

    <select id="queryByName" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM mcp
        WHERE name = #{name}
    </select>

    <select id="queryByType" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM mcp
        WHERE type = #{type}
    </select>

    <select id="queryAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM mcp
    </select>

    <select id="queryByStatus" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM mcp
        WHERE status = #{status}
    </select>

    <select id="queryByAgentId" resultMap="BaseResultMap">
        SELECT m.<include refid="Base_Column_List"/>
        FROM mcp m
        INNER JOIN agent_mcp am ON m.id = am.mcp_id
        WHERE am.agent_id = #{agentId}
    </select>

    <update id="update" parameterType="com.example.ddd.infrastructure.dao.po.McpPO">
        UPDATE mcp
        SET name = #{name},
            type = #{type},
            description = #{description},
            base_url = #{baseUrl},
            headers = #{headers},
            status = #{status},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM mcp WHERE id = #{id}
    </delete>

    <delete id="deleteByIds">
        DELETE FROM mcp WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>

